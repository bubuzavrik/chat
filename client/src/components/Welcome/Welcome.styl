.welcome-wrapper
  display flex
  align-items center
  justify-content center
  background #333 url('../../global/img/people.png') repeat top center
  background-size cover
  min-height calc(100vh - 93px - 44px)
.welcome
  margin 50px 0
  &__title
    margin-top 30px
    color white
    font-size 82px
    font-weight bold
  &__form
    background-color white
    border-radius 10px
    &_title
    &_btn
      text-align center
      font-weight bold
@media (max-width 992px)
  .welcome
    &__title
      font-size 55px
      text-align center
      margin 0 0 20px
@media (max-width 425px)
  .welcome
    &__title
      font-size 50px
      margin-bottom 45px